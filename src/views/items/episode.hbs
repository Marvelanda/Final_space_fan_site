<div class="container list">
  <ul class="list--element item_list--element">
    <div class="search_images">
      <img src="{{data.img_url}}" alt="" width="400px">
    </div>
    <div>
      <li>Name: {{data.name}}</li>
      <li>Air date: {{data.air_date}}</li>
      <li>Director: {{data.director}}</li>
      <li>Inhabitants: {{data.director}}</li>

      <li>Characters:
        <ul>
          {{#each data.characters}}
          <li><a href="/characters/{{id}}">{{this.name}}</a></li>
          {{/each}}
        </ul>
      </li>
    </div>
  </ul>
</div>
